

<form action="/admin/user/update"autocomplete="off" method="POST">
    <input type="hidden" name="_id" value="<%=user._id%>">
    <div class="form-group">
        <label>First Name</label>
        <input type="text" class="form-control" name="fname" value="<%= user.fname %>" >
        
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input type="text" class="form-control" name="lname" value="<%= user.fname %>" >
        
    </div>
  
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>* Select Your Package</label>
            <select class="form-control" name="package" tabindex="-1" aria-hidden="true"value="<%= user.package %>">
                <option value="basic">Basic</option>
                <option value="delux">Delux</option>
            </select>        
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" placeholder=" Email"autocomplete="on"value="<%= user.email %>" >
            
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" autocomplete="on"value="<%= user.password %>" >
            
        </div>
    </div>
    <div class="form-group">
        <label>Image</label>
        <input type="file" class="form-control" name="files"value="<%= user.files %>>
     
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
    </div>
</form>