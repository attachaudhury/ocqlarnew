<form enctype="multipart/form-data" class="container" action="/admin/Newsadd" method="post">
    <div class="row">
      <div class="form-group col">
        <label for="author">Author</label>
        <input id="author" name="author" type="text" required="required"
          class="form-control">
      </div>
      <div class="form-group col">
        <label for="title">Title</label>
        <input id="title" name="title" type="text" class="form-control">
      </div>
    </div>
    <div class="row">
      <div class="form-group col">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="8" class="form-control"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="form-group col">
        <label for="image">Image</label>
        <input  name="files"  type="file" class="form-control" required>
      </div>
    </div>
    <div class="form-group">
      <button name="submit" type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>